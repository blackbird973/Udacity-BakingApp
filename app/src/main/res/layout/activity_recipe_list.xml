<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/list_scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="yohan.bakingapp.com.bakingapp_nanodegree.RecipeListActivity"
    >

    <LinearLayout
        android:id="@+id/list_llayout"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/recipe_list_framelayout"
            android:name="yohan.bakingapp.com.bakingapp_nanodegree.RecipeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"></fragment>

    </LinearLayout>
</ScrollView>
